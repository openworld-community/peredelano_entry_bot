docker run -e DISABLE_ERRORS=true \
           -e LOG_LEVEL=WARN \
           -e VALIDATE_ALL_CODEBASE=false \
           -e IGNORE_GITIGNORED_FILES=true \
           -e VALIDATE_GITLEAKS=true \
           -e VALIDATE_GITHUB_ACTIONS=true \
           -e VALIDATE_MARKDOWN=true \
           -v .:/tmp/lint:ro \
           -e VALIDATE_PYTHON_MYPY=true \
           -e PYTHON_MYPY_CONFIG_FILE=.mypy.ini \
           -v .mypy.ini:/action/lib/.automation/.mypy.ini:ro \
           -e VALIDATE_DOCKERFILE_HADOLINT=true \
           -e DOCKERFILE_HADOLINT_FILE_NAME=.hadolint.yaml \
           -v .hadolint.yaml:/action/lib/.automation/.hadolint.yaml:ro \
           -e VALIDATE_YAML=true \
           -e YAML_CONFIG_FILE=.yamllint.yml \
           -v .yamllint.yml:/action/lib/.automation/.yamllint.yml:ro \
           -e RUN_LOCAL=true --rm github/super-linter
